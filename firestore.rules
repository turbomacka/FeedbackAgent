rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function canView(resource) {
      return signedIn() && request.auth.uid in resource.data.visibleTo;
    }

    function isOwner(resource) {
      return signedIn() && resource.data.ownerUid == request.auth.uid;
    }

    match /agents/{agentId} {
      allow read: if resource.data.isPublic == true || canView(resource);
      allow create: if signedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isOwner(resource);

      match /materials/{materialId} {
        allow read: if canView(get(/databases/$(database)/documents/agents/$(agentId)));
        allow create, update, delete: if isOwner(get(/databases/$(database)/documents/agents/$(agentId)));
      }
    }

    match /submissions/{submissionId} {
      allow read: if signedIn() && request.auth.uid in resource.data.visibleTo;
      allow create, update, delete: if false;
    }

    match /users/{userId} {
      allow read, create, update: if signedIn() && request.auth.uid == userId;
    }

    match /auditLogs/{logId} {
      allow read, create, update, delete: if false;
    }

    match /ragChunks/{chunkId} {
      allow read, create, update, delete: if false;
    }
  }
}
